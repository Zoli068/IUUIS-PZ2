<UserControl x:Class="NetworkService.Views.NetworkEntitiesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetworkService.Views" 
             xmlns:model="clr-namespace:NetworkService.Model"
             xmlns:assets="clr-namespace:NetworkService.Assets"
             xmlns:fa5="http://schemas.fontawesome.com/icons/"
             xmlns:viewModel="clr-namespace:NetworkService.ViewModel" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="600" 
             d:DesignWidth="360">
    
    <!--#region Resources-->
    <UserControl.Resources>

        <!--#region  Styles,Datatemplates-->
        <Style x:Key="CheckBoxListViewStyle"  TargetType="{x:Type CheckBox}" >
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="{StaticResource UIThirdColor}"/>
            <Setter Property="Template">
                <Setter.Value>

                    <ControlTemplate TargetType="CheckBox">

                        <Border Width="25"
                                CornerRadius="15"
                                Background="{StaticResource UIThirdColor}"
                                Height="25">

                            <Border Background="{TemplateBinding Background}"
                                    Width="15"
                                    CornerRadius="15"
                                    Height="15">
                            </Border>

                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="{StaticResource UIPrimaryColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <ControlTemplate
			x:Key="ComboBoxToggleButton"
			TargetType="{x:Type ToggleButton}">

            <Border
				Grid.Column="0"
				CornerRadius="15"
				Margin="2 0 4 3"
                Padding="2"
                BorderThickness="0"
				Background="{StaticResource TextBoxBackGround}">

                <StackPanel
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">

                    <fa5:SvgAwesome
                    Height="16"
                    Foreground="{StaticResource UISecondaryColor}"
                    Grid.Column="1"
                    Icon="Solid_ChevronDown"/>

                </StackPanel>
            </Border>
        </ControlTemplate>

        <ControlTemplate
			x:Key="ComboBoxTextBox"
			TargetType="{x:Type TextBox}">
            
            <Border
				x:Name="PART_ContentHost"
				Focusable="False"
				Background="{TemplateBinding Background}" />

        </ControlTemplate>

        <Style
			x:Key="{x:Type ComboBox}"
			TargetType="{x:Type ComboBox}">
            
            <Setter
				Property="SnapsToDevicePixels"
				Value="true" />
            
            <Setter
				Property="OverridesDefaultStyle"
				Value="true" />
            
            <Setter
				Property="ScrollViewer.HorizontalScrollBarVisibility"
				Value="Auto" />
            
            <Setter
				Property="ScrollViewer.VerticalScrollBarVisibility"
				Value="Auto" />
            
            <Setter
				Property="ScrollViewer.CanContentScroll"
				Value="true" />
            
            <Setter
				Property="MinWidth"
				Value="120" />
            
            <Setter
				Property="MinHeight"
				Value="20" />
            
            <Setter
				Property="Foreground"
				Value="White" />
            
            <Setter
				Property="Template">
                <Setter.Value>
                    
                    <ControlTemplate
						TargetType="{x:Type ComboBox}">
                        
                        <Grid>

                            <ToggleButton
								Name="ToggleButton"
								Template="{StaticResource ComboBoxToggleButton}"
								Grid.Column="2"
								Focusable="false"
								IsChecked="{Binding Path=IsDropDownOpen,Mode=TwoWay,RelativeSource={RelativeSource TemplatedParent}}"
								ClickMode="Press"></ToggleButton>

                            <ContentPresenter
								Name="ContentSite"
								IsHitTestVisible="False"
								Content="{TemplateBinding SelectionBoxItem}"
								ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
								ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
								Margin="3,3,12,7"
                                TextBlock.FontSize="15"
                                TextBlock.Foreground="{StaticResource UISecondaryColor}"
                                TextBlock.FontWeight="SemiBold"
								VerticalAlignment="Center"
								HorizontalAlignment="Center" />

                            <TextBox
								x:Name="PART_EditableTextBox"
								Style="{x:Null}"
								Template="{StaticResource ComboBoxTextBox}"
								HorizontalAlignment="Left"
								VerticalAlignment="Center"
								Margin="3,3,3,3"
								Focusable="True"
								Background="{StaticResource TextBoxBackGround}"
								Foreground="{StaticResource UISecondaryColor}"
								Visibility="Hidden"
								IsReadOnly="{TemplateBinding IsReadOnly}" />

                            <Popup
								Name="Popup"
								Placement="Bottom"
								IsOpen="{TemplateBinding IsDropDownOpen}"
								AllowsTransparency="True"
								Focusable="False"
								PopupAnimation="Slide">

                                <Grid
									Name="DropDown"
									SnapsToDevicePixels="True"
									MinWidth="{TemplateBinding ActualWidth}"
									MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    
                                    <Border
										x:Name="DropDownBorder"
										Background="{StaticResource TextBoxBackGround}"
										BorderThickness="1"
										BorderBrush="{StaticResource ButtonColor}" />
                                    
                                    <ScrollViewer
										Margin="4,6,4,6"
										SnapsToDevicePixels="True">
                                        
                                        <StackPanel
											IsItemsHost="True"
											KeyboardNavigation.DirectionalNavigation="Contained" />
                                        
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            
                            <Trigger
								Property="HasItems"
								Value="false">
                                <Setter
									TargetName="DropDownBorder"
									Property="MinHeight"
									Value="95" />
                            </Trigger>
                            
                            <Trigger
								Property="IsEnabled"
								Value="false">
                                <Setter
									Property="Foreground"
									Value="{StaticResource UISecondaryColor}" />
                            </Trigger>

                            <Trigger
								SourceName="Popup"
								Property="Popup.AllowsTransparency"
								Value="true">
                                
                                <Setter
									TargetName="DropDownBorder"
									Property="CornerRadius"
									Value="15" />
                                <Setter
									TargetName="DropDownBorder"
									Property="Margin"
									Value="0,4,0,0" />
                                
                            </Trigger>

                            <Trigger
								Property="IsEditable"
								Value="true">
                                
                                <Setter
									Property="IsTabStop"
									Value="false" />
                                <Setter
									TargetName="PART_EditableTextBox"
									Property="Visibility"
									Value="Visible" />
                                <Setter
									TargetName="ContentSite"
									Property="Visibility"
									Value="Hidden" />
                                
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style
			x:Key="{x:Type ComboBoxItem}"
			TargetType="{x:Type ComboBoxItem}">
            
            <Setter
				Property="SnapsToDevicePixels"
				Value="true" />
            
            <Setter
				Property="Foreground"
				Value="{StaticResource UISecondaryColor}" />
            
            <Setter
				Property="OverridesDefaultStyle"
				Value="true" />
            
            <Setter
				Property="FontSize"
				Value="15" />
            
            <Setter
                Property="FontWeight"
                Value="SemiBold"/>

            <Setter
				Property="Template">
                <Setter.Value>
                    
                    <ControlTemplate
						TargetType="{x:Type ComboBoxItem}">
                        
                        <Border
                            Margin="0 4 0 0"
                            Padding="0 6 0 0"
							Name="Border"
                            Height="36"
                            CornerRadius="10"
                            BorderBrush="{StaticResource ButtonColor}"
                            BorderThickness="1.8"
                            Background="{StaticResource TextBoxBackGround}"
							SnapsToDevicePixels="true">
                            
                            <ContentPresenter HorizontalAlignment="Center" />
                            
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type RadioButton}" >
            <Setter Property="Template">
                <Setter.Value>
                    
                    <ControlTemplate TargetType="{x:Type RadioButton}">

                        <BulletDecorator Background="Transparent" Cursor="Hand">
                            <BulletDecorator.Bullet>
                                
                                <Grid Height="25" Width="25">
                                    <Border Name="RadioOuter" Background="Transparent" BorderBrush="{StaticResource UIPrimaryColor}" BorderThickness="2" CornerRadius="15" />
                                    <Border CornerRadius="15" Margin="4" Name="RadioMark" Background="{StaticResource UIPrimaryColor}" Visibility="Hidden" />
                                </Grid>
                                
                            </BulletDecorator.Bullet>
                        </BulletDecorator>
                        
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="true">
                                <Setter TargetName="RadioMark" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="RadioOuter" Property="BorderBrush" Value="{StaticResource ResourceKey=UIPrimaryColor}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <DataTemplate 
            DataType="{x:Type model:Server}">

            <Border 
                CornerRadius="15"
                BorderThickness="1"
                Margin="0 4 0 1"
                Padding="0 0 0 2"
                Height="80" 
                Background="{StaticResource UIPrimaryColor}">

                <Grid>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="8*"/>
                        <ColumnDefinition Width="3.2*"/>
                        <ColumnDefinition Width="2.4*"/>
                    </Grid.ColumnDefinitions>

                    <DockPanel
                        Grid.Row="0"
                        Grid.RowSpan="3"
                        VerticalAlignment="Center"
                        Grid.Column="0">

                        <TextBlock
                            Width="26"
                            Margin="8 0 4 0"
                            Foreground="{StaticResource UIThirdColor}"
                            FontSize="15"
                            TextAlignment="Center"
                            VerticalAlignment="Center"
                            Text="{Binding Identificator}"/>

                        <Separator 
                            Width="70"
                            Background="{StaticResource UIThirdColor}"
                            Style="{StaticResource VerticalSeparatorStyle}" />

                    </DockPanel>

                    <TextBlock
                        HorizontalAlignment="Center"
                        Grid.Row="0"
                        Grid.Column="1"
                        FontSize="15"
                        Foreground="{StaticResource UIThirdColor}"
                        VerticalAlignment="Center"
                        Text="{Binding Name}"/>

                    <TextBlock
                        HorizontalAlignment="Center"
                        Grid.Row="1"
                        Grid.Column="1"
                        FontSize="15"
                        Foreground="{StaticResource UIThirdColor}"
                        VerticalAlignment="Center"
                        Text="{Binding Path=Type.ServerTypeName}"/>

                    <TextBlock
                        HorizontalAlignment="Center"
                        Grid.Row="2"
                        Grid.Column="1"
                        FontSize="15"
                        Foreground="{StaticResource UIThirdColor}"
                        VerticalAlignment="Center"
                        Text="{Binding IpAddress}"/>

                    <DockPanel
                        Grid.Row="0"
                        Grid.RowSpan="3"
                        VerticalAlignment="Center"
                        Grid.Column="2">

                        <Separator 
                            Width="70"
                            Background="{StaticResource UIThirdColor}"
                            Style="{StaticResource VerticalSeparatorStyle}" />

                        <TextBlock
                            Width="47"
                            Margin="4 0 0 0"
                            Foreground="{StaticResource UIThirdColor}"
                            TextAlignment="Center"
                            FontSize="18"
                            FontWeight="Bold"
                            VerticalAlignment="Center"
                            Text="{Binding Usage, Mode=OneWay,StringFormat={}{0}%}"/>

                        <Separator 
                            Width="70"
                            Background="{StaticResource UIThirdColor}"
                            Style="{StaticResource VerticalSeparatorStyle}" />

                    </DockPanel>

                    <Border                         
                        Grid.Row="0"
                        Grid.RowSpan="3"
                        Grid.Column="3"
                        Width="25" 
                        Height="25"
                        Margin="0 0 6 0"
                        CornerRadius="15"
                        Background="{StaticResource UIThirdColor}">

                        <CheckBox
                            Command="{Binding ElementName=ServersListView,Path=DataContext.AddToDelete}"
                            CommandParameter="{Binding}"
                            Style="{StaticResource CheckBoxListViewStyle}"/>

                    </Border>
                </Grid>
            </Border>
        </DataTemplate>
        <!--#endregion-->
        
    </UserControl.Resources>
    <!--#endregion-->
    
    <!--region EntitiesView-->   
    <Grid Background="{StaticResource UIThirdColor}">

        <!--#region  View Grid Definitions-->
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="16*"/>
        </Grid.RowDefinitions>
        <!--#endregion-->
        
        <!--#region  Title Header-->
        <DockPanel
            Width="360" 
            Panel.ZIndex="0"
            Background="{StaticResource UIPrimaryColor}">

            <Menu 
                Background="Transparent">

                <MenuItem
                    Margin="1 0 0 0"
                    Command="{Binding DataContext.NavCommand,RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                    CommandParameter="home">

                    <MenuItem.Style>

                        <Style TargetType="{x:Type MenuItem}">
                            <Setter Property="OverridesDefaultStyle" Value="True"/>
                            <Setter Property="SnapsToDevicePixels" Value="True"/>
                            <Setter Property="Template">
                                <Setter.Value>

                                    <ControlTemplate TargetType="{x:Type MenuItem}">

                                        <fa5:SvgAwesome
                                            Height="35"
                                            Width="30" 
                                            Foreground="{StaticResource UIThirdColor}"
                                            Icon="Solid_CaretLeft"/>

                                    </ControlTemplate>

                                </Setter.Value>
                            </Setter>

                            <Style.Triggers>
                                <Trigger 
                                 Property="IsPressed" 
                                 Value="True">

                                    <Setter
                                     Property="Effect"
                                     Value="{StaticResource SecondaryClickedDropShadowEffect}"/>

                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="0.993" ScaleY="0.983"  />
                                        </Setter.Value>
                                    </Setter>

                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </MenuItem.Style>
                </MenuItem>
            </Menu>

            <TextBlock
                Foreground="{StaticResource UIThirdColor}"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Padding="0 0 30 0"
                FontSize="28"
                FontWeight="Semibold"
                Text="Network Entities"/>

        </DockPanel>
        <!--#endregion-->       
        
        <!--#region View Body-->
        <StackPanel 
            Grid.Row="1"
            VerticalAlignment="Top"
            Margin="0 10 0 0"
            Width="315">
         
            <!--#region Filter Button-->
            <StackPanel 
                Margin="0 0 0 10"
                HorizontalAlignment="Right"
                Orientation="Horizontal">

                <Button
                    Margin="0 0 115 0"
                    Visibility="{Binding ActiveFilter}"
                    Command="{Binding ResetFilter}">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate>

                                        <Border 
                                            Background="{StaticResource ButtonColor}"
                                            Width="115"
                                            BorderThickness="1"
                                            CornerRadius="11"
                                            Height="35">

                                            <StackPanel 
                                                Orientation="Horizontal"
                                                HorizontalAlignment="Right">

                                                <TextBlock
                                                    VerticalAlignment="Center"
                                                    FontWeight="Bold"
                                                    FontSize="13"
                                                    Text="Reset Filter "/>

                                                <fa5:SvgAwesome
                                                    Margin="0 0 13 0"
                                                    Height="20"
                                                    Width="18"
                                                    Icon="Solid_Times" />

                                            </StackPanel>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>

                            <Style.Triggers>
                                <Trigger 
                                     Property="IsPressed" 
                                     Value="True">

                                    <Setter
                                         Property="Effect"
                                         Value="{StaticResource SecondaryClickedDropShadowEffect}"/>

                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="0.993" ScaleY="0.983"  />
                                        </Setter.Value>
                                    </Setter>

                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button
                    Command="{Binding ShowFilter}">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Template">
                                <Setter.Value>

                                    <ControlTemplate>

                                        <Border 
                                            Background="{StaticResource ButtonColor}"
                                            Width="85"
                                            BorderThickness="1"
                                            CornerRadius="11"
                                            Height="35">

                                            <StackPanel 
                                                Orientation="Horizontal"
                                                HorizontalAlignment="Right">

                                                <TextBlock
                                                    VerticalAlignment="Center"
                                                    FontWeight="Bold"
                                                    FontSize="13"
                                                    Text="Filter"/>

                                                <fa5:SvgAwesome
                                                    Margin="0 0 13 0"
                                                    Height="20"
                                                    Width="24"
                                                    Icon="Solid_Filter"/>

                                            </StackPanel>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>

                            <Style.Triggers>
                                <Trigger 
                                     Property="IsPressed" 
                                     Value="True">

                                    <Setter
                                         Property="Effect"
                                         Value="{StaticResource SecondaryClickedDropShadowEffect}"/>

                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="0.993" ScaleY="0.983"  />
                                        </Setter.Value>
                                    </Setter>

                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
            <!--#endregion-->
            
            <!--#region Entity Table-->
            
            <!--#region Table Header-->
            <Border
                BorderBrush="{StaticResource UIPrimaryColor}"
                Height="35"
                CornerRadius="10 10 0 0"
                Padding="2 5 2 0"
                Background="Transparent"
                BorderThickness="2 2 2 0">

                <StackPanel Orientation="Horizontal">

                    <Border 
                        Height="28"
                        CornerRadius="10"
                        Width="38" 
                        Background="{StaticResource UIPrimaryColor}">

                        <TextBlock 
                            TextAlignment="Center"
                            VerticalAlignment="Center"
                            Padding="0 0 0 2"
                            HorizontalAlignment="Center"
                            Foreground="{StaticResource UIThirdColor}"
                            FontSize="15"
                            Text="ID"/>

                    </Border>

                    <Border 
                        Height="28"
                        Margin="1 0 0 0"
                        CornerRadius="10"
                        Width="158" 
                        Background="{StaticResource UIPrimaryColor}">

                        <TextBlock 
                            TextAlignment="Center"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Foreground="{StaticResource UIThirdColor}"
                            Padding="0 0 0 2"
                            FontSize="15"
                            Text="Informations"/>

                    </Border>

                    <Border 
                        Height="28"
                        Margin="1 0 0 0"
                        Padding="0 0 0 2"
                        CornerRadius="10"
                        Width="56" 
                        Background="{StaticResource UIPrimaryColor}">

                        <TextBlock 
                            TextAlignment="Center"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Foreground="{StaticResource UIThirdColor}"
                            FontSize="15"
                            Text="Usage"/>

                    </Border>

                    <Border 
                        Height="28"
                        Margin="1 0 0 0"
                        Padding="0 0 0 2"
                        CornerRadius="10"
                        Width="52" 
                        Background="{StaticResource UIPrimaryColor}">

                        <TextBlock 
                            TextAlignment="Center"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Foreground="{StaticResource UIThirdColor}"
                            FontSize="15"
                            Text="Select"/>

                    </Border>

                </StackPanel>
            </Border>
            <!--#endregion-->
                
            <!--region Entity list-->
            <Border 
                BorderBrush="{StaticResource UIPrimaryColor}"
                Background="Transparent"
                BorderThickness="2 0 2 2"
                Height="379"
                CornerRadius="0 0 10 10">

                <ListView
                        ItemsSource="{Binding FilteredServers,NotifyOnSourceUpdated=True,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                        ScrollViewer.VerticalScrollBarVisibility="Hidden"
                        x:Name="ServersListView"
                        BorderThickness="0"
                        Background="Transparent">

                    <ListView.ItemContainerStyle>

                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Focusable" Value="false"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type ListViewItem}">
                                        <ContentPresenter />
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>

                        </Style>

                    </ListView.ItemContainerStyle>

                </ListView>
            </Border>
            <!--#endregion-->
            
            <!--#endregion-->

            <!--#region ADD,DELETE buttons-->        
            <StackPanel 
                Margin="0 20 0 20"
                Orientation="Horizontal">

                <Button 
                    Margin="0 0 20 0"
                    Height="55" 
                    Command="{Binding ShowAdd}"
                    Width="147.5">

                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate>

                                        <Border 
                                            Background="{StaticResource ButtonColor}"
                                            CornerRadius="15">

                                            <StackPanel 
                                                Orientation="Horizontal"
                                                HorizontalAlignment="Center">

                                                <TextBlock
                                                    VerticalAlignment="Center"
                                                    TextAlignment="Center"
                                                    FontWeight="SemiBold"
                                                    FontSize="24"
                                                    Text="Add"/>

                                            </StackPanel>

                                        </Border>

                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger 
                                     Property="IsPressed" 
                                     Value="True">

                                    <Setter
                                         Property="Effect"
                                         Value="{StaticResource SecondaryClickedDropShadowEffect}"/>

                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="0.993" ScaleY="0.983"  />
                                        </Setter.Value>
                                    </Setter>

                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button 
                    Command="{Binding RemoveSelected}"
                    Height="55" 
                    Width="147.5">

                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate>

                                        <Border 
                                            Background="{StaticResource ButtonColor}"
                                            CornerRadius="15">

                                            <StackPanel 
                                                Orientation="Horizontal"
                                                HorizontalAlignment="Center">

                                                <TextBlock
                                                    VerticalAlignment="Center"
                                                    TextAlignment="Center"
                                                    FontWeight="SemiBold"
                                                    FontSize="24"
                                                    Text="Delete"/>
                                                
                                            </StackPanel>
                                            
                                        </Border>
                                        
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>

                            <Style.Triggers>
                                <Trigger 
                                     Property="IsPressed" 
                                     Value="True">

                                    <Setter
                                         Property="Effect"
                                         Value="{StaticResource SecondaryClickedDropShadowEffect}"/>

                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="0.993" ScaleY="0.983"  />
                                        </Setter.Value>
                                    </Setter>

                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
            <!--#endregion -->

        </StackPanel>
        <!--#endregion-->

        <!--#region  Opacity-->
        <Button
            Grid.RowSpan="2"
            Panel.ZIndex="1"
            Command="{Binding HideTheTabs}">

            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate>
                                <Rectangle 
                                x:Name="OpacityForTable"
                                Grid.Row="0"
                                Grid.RowSpan="2"
                                Panel.ZIndex="1"
                                StrokeThickness="0"
                                Height="600"
                                Width="0"
                                Fill="Gray" Opacity="0.7">

                                    <Rectangle.Style>
                                        <Style TargetType="Rectangle">
                                            <Style.Triggers>

                                                <DataTrigger Binding="{Binding OpacityBackGround}" Value="True" >

                                                    <DataTrigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation
                                                                     Storyboard.TargetProperty="Width"
                                                                     From="0"
                                                                     To="360" Duration="0:0:0" AutoReverse="False"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </DataTrigger.EnterActions>

                                                    <DataTrigger.ExitActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation
                                                                     Storyboard.TargetProperty="Width"
                                                                     From="360"
                                                                     To="0" Duration="0:0:0" AutoReverse="False"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </DataTrigger.ExitActions>

                                                </DataTrigger>

                                            </Style.Triggers>
                                        </Style>
                                    </Rectangle.Style>
                                </Rectangle>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>
        <!--#endregion-->
        
        <!--#region DeleteConfirmation-->
        <Border
           Grid.Row="0"
           Height="600"
           Width="360"
           Visibility="{Binding DeleteConfirm}"
           Grid.RowSpan="2"
           Panel.ZIndex="4">

            <Grid>

                <Border HorizontalAlignment="Center"
                        Width="324"
                        CornerRadius="15"
                        BorderBrush="{StaticResource UIThirdColor}"
