                                <Setter Property="CommandParameter" Value="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">

                                            <Border
                                                 Background="{StaticResource ButtonColor}"
                                                 Margin="3 3 3 3"
                                                 CornerRadius="5"
                                                 Height="42"
                                                 Width="87">

                                                <fa5:SvgAwesome
                                                    Height="28"
                                                    Icon="Solid_ArrowLeft"/>

                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger 
                                         Property="IsPressed" 
                                         Value="True">

                                        <Setter
                                             Property="Effect"
                                             Value="{StaticResource SecondaryClickedDropShadowEffect}"/>

                                        <Setter Property="RenderTransform">
                                            <Setter.Value>
                                                <ScaleTransform ScaleX="0.996" ScaleY="0.996"  />
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        <!--#endregion-->

    </Grid>
    <!--#endregion-->
    
</UserControl>
